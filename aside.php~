<?php
session_start();
include_once "model/session.php";
include_once "../model/search.php";
if( !isset( $_SESSION['login']) && !isset($_COOKIE['login']) )
	include_once "vue/aside.html";
else
{
	if( isset($_COOKIE['login']) && ! fetch($_COOKIE['login']) )
		die("ERREUR: contenue de la cookie est invalide");
	if(! isset($_SESSION['login']))
		load_session($_COOKIE);	
	
	
	echo "Bonjour ". $_SESSION['prenom'] . " " . $_SESSION['nom'] . "\n <a href='controller/logout.php'> deconnexion</a>";
	echo "<a href='client/espace_client.php'>espace client</a>";
}
	
	


